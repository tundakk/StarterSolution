@inherits UmbracoViewPage<IHeaderProperties>

<!-- Header-->
    @if (!Model.LightTitleBackground)
    {
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">

                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">@Model.Title</h1>
                    <p class="lead fw-normal text-white-50 mb-0">@Model.Subtitle
                    </p>
                </div>
            </div>
        </header>
    }
    @if (Model.LightTitleBackground)
{
    <header class="bg-light py-5">
        <div class="container px-4 px-lg-5 my-5">
            
            <div class="text-center text-dark">
                <h1 class="display-4 fw-bolder">@Model.Title</h1>
                <p                
                   class="lead fw-normal text-dark-50 mb-0">@Model.Subtitle                
                </p>
            </div>
        </div>
    </header>
    }